generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model User {
  id          String     @id @default(uuid()) @unique
  user_name   String     @unique @db.VarChar(50)
  password    String
  email       String     @unique @db.VarChar(250)
  name        String     @db.VarChar(100)
  contact_no  String     @unique @db.VarChar(13)
  store       String     @db.VarChar(100)
  province_id String     @db.Char(3)
  city        String     @db.VarChar(50)
  vendor_type VendorType
  address     String     @db.VarChar(250)
  organisation_id String? @db.VarChar(36) // Optional foreign key to organisations

  province    Province?  @relation(fields: [province_id], references: [id], onDelete: Restrict, onUpdate: Cascade)
  sessions    Session[]
  organisation Organisation? @relation(fields: [organisation_id], references: [id])
  
  @@map("users")
}

model Province {
  id    String @id @db.Char(3)
  name  String @db.VarChar(100)
  users User[]
  
  @@map("provinces")
}

enum VendorType {
  retailer
  LP
  broker
  agency
}

model Organisation {
  id              String   @id @default(uuid()) // UUID primary key
  organisation_name   String
  organisation_address String?
  plan_id             Int?     // relation to Plans
  plan                Plan?    @relation(fields: [plan_id], references: [id])
  users               User[]
  
  @@map("organisations")
}

model Plan {
  id        Int      @id @default(autoincrement())
  price     Float
  features  Json     // JSON field for {history_days, refresh, logins_number}
  organisations Organisation[]
  
  @@map("plans")
}

model Session {
  id             String   @id @default(uuid())
  auth_token     String
  refresh_token  String
  user_id        String   @db.VarChar(36) // UUID length
  user           User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  
  @@index([auth_token])
  @@index([refresh_token])
  @@index([user_id])
  @@map("sessions")
}

model ListingAppSide {
  id          String  @id @db.Uuid
  source_id   String  @unique
  url         String  @db.VarChar(250)
  title       String  @db.VarChar(250)
  category    String  @db.VarChar(50)
  price       Float
  location    String  @db.VarChar(250)
  status      Boolean
  type        String? @db.VarChar(50)
  discounts   String? @db.VarChar(4)
  variant     String?
  stock       Int?
  variantType String? @db.Char(10)
  listedPrice Float?
  sku         String? @db.VarChar(50)
  thc         String?
  cbd         String?
}